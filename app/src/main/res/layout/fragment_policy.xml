<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".signup.ui.PolicyFragment">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_policy_return"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_height="20dp"
        tools:layout_width="12dp"
        android:layout_marginTop="66dp"
        android:layout_marginLeft="22dp"
        android:background="@drawable/back_vector"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textview_policy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="약관 동의"
        android:textColor="@color/tridy_black"
        android:textSize="24sp"
        android:fontFamily="@font/notosanskrbold"
        android:layout_marginLeft="11dp"
        app:layout_constraintStart_toEndOf="@id/button_policy_return"
        app:layout_constraintTop_toTopOf="@id/button_policy_return"
        app:layout_constraintBottom_toBottomOf="@id/button_policy_return"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textview_policy_agree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="트리디의 원활한 사용을 위해 약관 동의가 필요해요."
        android:fontFamily="@font/notosanskrregular"
        android:textSize="16sp"
        android:textColor="@color/tridy_gray2"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@id/button_policy_return"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/checkbox_policy_agree"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:backgroundTint="@color/tridy_gray5"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="20dp"
        android:checked="true"
        android:text="전체 약관에 동의합니다."
        android:fontFamily="@font/notosanskrbold"
        android:textSize="16sp"
        android:textColor="@color/tridy_gray2"
        app:layout_constraintTop_toBottomOf="@id/textview_policy_agree"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_policy_agree"
        android:layout_width="match_parent"
        android:layout_height="152dp"
        android:background="@color/tridy_gray9"
        app:layout_constraintTop_toBottomOf="@id/checkbox_policy_agree"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_private_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_width="15dp"
            tools:layout_height="9dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="21dp"
            android:background="@drawable/check"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textview_private_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="개인정보 취급방침 (필수)"
            android:fontFamily="@font/notosanskrregular"
            android:textSize="14sp"
            android:textColor="@color/tridy_gray4"
            android:layout_marginLeft="12dp"
            app:layout_constraintStart_toEndOf="@id/button_private_check"
            app:layout_constraintTop_toTopOf="@id/button_private_check"
            app:layout_constraintBottom_toBottomOf="@id/button_private_check"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textview_private_look"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/notosanskrmedium"
            android:text="@string/policy_look"
            android:textSize="14sp"
            android:textColor="@color/tridy_gray5"
            app:layout_constraintBottom_toBottomOf="@id/textview_private_check"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.9"
            app:layout_constraintStart_toEndOf="@id/textview_private_check"
            app:layout_constraintTop_toTopOf="@id/textview_private_check" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_user_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_width="15dp"
            tools:layout_height="9dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/check"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/button_private_check" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textview_user_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="사용자 이용약관 (필수)"
            android:fontFamily="@font/notosanskrregular"
            android:textSize="14sp"
            android:textColor="@color/tridy_gray4"
            android:layout_marginLeft="12dp"
            app:layout_constraintStart_toEndOf="@id/button_user_check"
            app:layout_constraintTop_toTopOf="@id/button_user_check"
            app:layout_constraintBottom_toBottomOf="@id/button_user_check"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textview_user_look"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/notosanskrmedium"
            android:text="@string/policy_look"
            android:textSize="14sp"
            android:textColor="@color/tridy_gray5"
            app:layout_constraintBottom_toBottomOf="@id/textview_user_check"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.9"
            app:layout_constraintStart_toEndOf="@id/textview_user_check"
            app:layout_constraintTop_toTopOf="@id/textview_user_check" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_position_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_width="15dp"
            tools:layout_height="9dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/check"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/button_user_check" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textview_position_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="위치정보 서비스 이용약관 (선택)"
            android:fontFamily="@font/notosanskrregular"
            android:textSize="14sp"
            android:textColor="@color/tridy_gray4"
            android:layout_marginLeft="12dp"
            app:layout_constraintStart_toEndOf="@id/button_position_check"
            app:layout_constraintTop_toTopOf="@id/button_position_check"
            app:layout_constraintBottom_toBottomOf="@id/button_position_check"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textview_position_look"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/notosanskrmedium"
            android:text="@string/policy_look"
            android:textColor="@color/tridy_gray5"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@id/textview_position_check"
            app:layout_constraintEnd_toEndOf="@+id/textview_user_look"
            app:layout_constraintStart_toStartOf="@+id/textview_user_look"
            app:layout_constraintTop_toTopOf="@id/textview_position_check" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textview_policy_explanation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:textColor="@color/tridy_gray5"
        android:fontFamily="@font/notosanskrregular"
        android:textSize="12sp"
        android:text="위치 정보를 제공해주시면 더 원활한 트리디 이용이 가능합니다."
        app:layout_constraintTop_toBottomOf="@id/layout_policy_agree"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_policy_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_rec34"
       android:layout_marginTop="140dp"
        android:textSize="18sp"
        android:text="가입하기"
        android:fontFamily="@font/notosanskrbold"
        android:textColor="@color/tridy_gray4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textview_policy_explanation" />







</androidx.constraintlayout.widget.ConstraintLayout>
</layout>